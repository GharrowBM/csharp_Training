<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NombreMagique.Views.GamePage"
             Title="Play a Game">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Label Text="{Binding WelcomeMessage}"
                   TextColor="White"
                   BackgroundColor="{StaticResource btnBG-001}"
                   FontFamily="Dongle"
                   HorizontalTextAlignment="Center"
                   FontSize="50"/>
            <Entry Text="{Binding NbrGuess, Mode=TwoWay}"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"
                   WidthRequest="100"
                   Keyboard="Numeric"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Guess!"
                        Style="{StaticResource menuButton}"
                    Command="{Binding TestNumberCommand}"
                    CommandParameter="{Binding NbrGuess}"/>
                <Button Text="New Number"
                        Style="{StaticResource menuButton}"
                    Command="{Binding TryAgainCommand}"
                    CommandParameter="{Binding IsWon}"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>