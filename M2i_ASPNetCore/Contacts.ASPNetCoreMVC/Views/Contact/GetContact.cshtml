@using Contacts.Classes
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var contact = Model as Contact;
    Layout = "_OwnLayout";
}

@if (contact != null) {

<h2>Contact n°@contact.Id</h2>

    @if (contact.AvatarPath != null)
    {

        <img src="~/@contact.AvatarPath" alt="Avatar">
    }

<form asp-controller="Contact" asp-action="EditContact" asp-route-id="@contact.Id">
<input type="text" name="lastname" value=@contact?.Lastname placeholder="Nom" />
<input type="text" name="firstname" value=@contact?.Firstname placeholder="Prénom" />
<input type="text" name="email" value=@contact?.Email placeholder="Email" />
<input type="text" name="phone" value=@contact?.Phone placeholder="Téléphone" />
<button type="submit">Editer</button>
</form>
}


