@{
    Layout = "_OwnLayout";
}

<h2>Liste des Contacts</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID.</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var contact in Model as List<Contact>)
        {
            <tr>
                <td>@contact.Id</td>
                <td>@contact.Lastname</td>
                <td>@contact.Firstname</td>
                <td>@contact.Email</td>
                <td>@contact.Phone</td>
                <td><a asp-action="GetContact" asp-controller="Contact" asp-route-id="@contact.Id">Editer</a> <a asp-action="DelContact" asp-controller="Contact" asp-route-id="@contact.Id">Supprimer</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="NewContact" asp-controller="Contact">Ajouter un contact</a>