@{
	@model List<Offer>
	Layout = "_AdsLayout";
	}

<form asp-action="Filter" asp-controller="Offer">
	<div class="row">
		<input type="text" name="filter" placeholder="Description or Title"/> 
	</div>
	<button type="submit">Filter</button>
</form>


<div class="row">
	<h2>Offer List</h2>
</div>

@foreach (var offer in Model)
{
	<div class="row p-1">
		<div class="col">
			<a asp-action="Details" asp-controller="Offer" asp-route-id="@offer.Id"><img src="~/@offer.Images.First()?.Path" alt="Offer image" class="rounded img-thumbnail"></a>

		</div>
		<div class="col-6">
			<h3>@offer.Title</h3>
			<p>@offer.Description.Substring(0,(offer.Description.Length > 99 ? 99 : offer.Description.Length)) <a asp-action="Details" asp-controller="Offer" asp-route-id="@offer.Id">(See more...)</a> </p>
		</div>
		<div class="col text-center">
			@offer.Price.ToString("C", CultureInfo.CurrentCulture)
		</div>
	</div>
}
<div class="row p-1">
	<a class="btn btn-secondary" asp-action="New" asp-controller="Offer">New offer</a>

</div>