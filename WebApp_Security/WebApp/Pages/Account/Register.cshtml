@page
@model WebApp.Pages.Account.RegisterModel
@{
}

<p>
    <h3>User Registration</h3>
</p>

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Email"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="RegisterViewModel.Email" class="form-control" />
            </div>
            <span class="text-danger col" asp-validation-for="RegisterViewModel.Email"></span>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Password"></label>
            </div>
            <div class="col-8">
                <input type="password" asp-for="RegisterViewModel.Password" class="form-control" />
            </div>
            <span class="text-danger col" asp-validation-for="RegisterViewModel.Password"></span>
        </div>
        <div class="mb-2 row">
            <div class="col-10">
            </div>
            <div class="col text-center">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
    </form>
</div>